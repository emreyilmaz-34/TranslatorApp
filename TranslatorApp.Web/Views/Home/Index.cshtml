@model TranslationDto
@{
    ViewData["Title"] = "Home Page";
}



<h1>Do Translation</h1>

<div class="row">
    <div class="col-md-8" style="margin: auto; width: 50%; padding: 10px;">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">

                @Html.DropDownListFor(m => m.LanguageId, (IEnumerable<SelectListItem>)ViewBag.LanguageList)

                <input asp-for="Text" class="form-control" />
                
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Translate" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>